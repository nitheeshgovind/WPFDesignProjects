<Window x:Class="FileManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Title="MainWindow" Height="768" Width="1024">
    <Window.Resources>
        
        
        
    </Window.Resources>
    <Border Background="Transparent">
        <Border Background="{StaticResource MenuBackgroundBrush}" CornerRadius="20" BorderThickness="0">
            <Grid ClipToBounds="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Rectangle Height="40" 
                               Width="40" 
                               RadiusX="10" 
                               RadiusY="10" 
                               VerticalAlignment="Center"
                               >
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="Assets/applogoexample.png" Stretch="Uniform"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0"
                                Style="{DynamicResource MenuButton}"
                                >
                            <Button.Content>
                                <Image Source="Assets/mmc.png" Width="20"/>
                            </Button.Content>
                        </Button>
                        <Button Grid.Row="1"
                                Style="{DynamicResource MenuButton}"
                                >
                            <Button.Content>
                                <Image Source="Assets/contacts.png" Width="20"/>
                            </Button.Content>
                        </Button>
                        <Button Grid.Row="2"
                                Style="{DynamicResource MenuButton}"
                                >
                            <Button.Content>
                                <Image Source="Assets/sms.png" Width="20"/>
                            </Button.Content>
                        </Button>
                        <Button Grid.Row="3"
                                Style="{DynamicResource MenuButton}"
                                >
                            <Button.Content>
                                <Image Source="Assets/settings.png" Width="20"/>
                            </Button.Content>
                        </Button>
                        <Button Grid.Row="5"
                                Style="{DynamicResource MenuButton}"
                                >
                            <Button.Content>
                                <Image Source="Assets/cloud.png" Width="20"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">

                    <Border Background="Transparent">

                        <Border Background="White" CornerRadius="20"></Border>
                        
                    </Border>
                    
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
